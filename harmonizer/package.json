{
  "name": "@apollo/harmonizer",
  "private": true,
  "version": "0.32.0",
  "description": "Apollo Federation Harmonizer JS Entrypoint",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "rollup": "rollup -c ./rollup.config.js",
    "version": "tmp=$(mktemp); dir=(${PWD##*/}); name=$(jq '.name' package.json); version=$(jq '.version' package.json); jq --arg version $version '.packages[\"$dir\"].version = ($version|fromjson)' ../package-lock.json >> \"$tmp\" && mv \"$tmp\" ../package-lock.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollographql/federation.git",
    "directory": "harmonizer-js/"
  },
  "author": "Apollo <opensource@apollographql.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12.13.0 <17.0"
  },
  "dependencies": {
    "@apollo/federation": "file:../federation-js"
  },
  "peerDependencies": {
    "graphql": "^14.5.0 || ^15.0.0"
  }
}
